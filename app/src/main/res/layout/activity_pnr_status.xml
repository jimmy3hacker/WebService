<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".PnrStatus">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/idTIP"
        android:layout_width="match_parent"
        android:layout_marginTop="75dp"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/idPnrEdit"
            android:inputType="number"
            android:fontFamily="@font/hind_siliguri_medium"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:hint="Enter PNR"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnStatus"
        android:layout_below="@id/idTIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="45dp"
        android:elevation="18sp"
        android:background="@drawable/btn"
        android:text="Get PNR Status"
        android:textColor="#fff"
        android:textSize="24sp" />


    <TextView
        android:fontFamily="@font/hind_siliguri_medium"
        android:padding="5dp"
        android:id="@+id/idLabelTNo"
        android:text="Train No."
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/btnStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/hind_siliguri_medium"
        android:padding="5dp"
        android:layout_below="@id/btnStatus"
        android:textSize="18sp"
        android:layout_toEndOf="@id/idLabelTNo"
        android:id="@+id/opTextTNo"
        android:layout_marginStart="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/hind_siliguri_medium"
        android:id="@+id/idLabelFromStation"
        android:text="From Station"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/idLabelTNo"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/hind_siliguri_medium"
        android:padding="5dp"
        android:layout_below="@id/opTextTNo"
        android:textSize="18sp"
        android:layout_toRightOf="@id/idLabelTNo"
        android:id="@+id/opTextFromStation"
        android:layout_marginStart="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:fontFamily="@font/hind_siliguri_medium"
        android:padding="5dp"
        android:id="@+id/idLabelToStation"
        android:text="To Station"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/idLabelFromStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/hind_siliguri_medium"
        android:padding="5dp"
        android:layout_below="@id/idLabelFromStation"
        android:textSize="18sp"
        android:layout_toRightOf="@id/idLabelTNo"
        android:id="@+id/opTextToStation"
        android:layout_marginStart="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/hind_siliguri_medium"
        android:id="@+id/idLabelTrainName"
        android:text="Train Name"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/idLabelToStation"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="@font/hind_siliguri_medium"
        android:padding="5dp"
        android:layout_below="@id/opTextToStation"
        android:textSize="18sp"
        android:layout_toEndOf="@id/idLabelTNo"
        android:id="@+id/opTextTrainName"
        android:layout_marginStart="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



<LinearLayout
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_marginTop="20dp"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/opTextTrainName"
    android:id="@+id/bigLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />






</RelativeLayout>